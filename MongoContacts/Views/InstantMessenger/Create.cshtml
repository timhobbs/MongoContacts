@model InstantMessengerModel

@{
    ViewBag.Title = "Create Instant Messenger";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (!String.IsNullOrEmpty(ViewBag.ErrorMessage)) {
    <div class="alert alert-error">
        @Html.Raw(ViewBag.ErrorMessage.Replace("\r\n", "<br />"))
    </div>
}

@using (Html.BeginForm("Create", "InstantMessenger", FormMethod.Post)) {
    @Html.HiddenFor(model => model.ContactId)
    @Html.EditorForModel()
    <button class="btn btn-primary">Add Instant Messenger</button>
}