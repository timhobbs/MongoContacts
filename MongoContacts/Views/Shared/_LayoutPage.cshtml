<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Mongo Contacts</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    @if (IsSectionDefined("head")) { 
        @RenderSection("head")
    }
</head>
<body>
    <div class="container-fluid">
        <div class="masthead">
            <ul class="nav nav-pills pull-right">
                <li @CheckActive("/contact")><a href="/Contact">Home</a></li>
                <li @CheckActive("/about")><a href="/About">About</a></li>
            </ul>
            <h3 class="muted">Mongo Contacts</h3>
        </div>
        <div class="row-fluid">
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/app.js"></script>
    @if (IsSectionDefined("scripts")) { 
        @RenderSection("scripts")
    }
</body>
</html>

@helper CheckActive(string path) {
    if (Request.Path.Equals(path, StringComparison.InvariantCultureIgnoreCase)) {
        @: class="active"
    }
}